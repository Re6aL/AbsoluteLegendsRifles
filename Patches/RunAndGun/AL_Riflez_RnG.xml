<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- Patch AL Guns weapons with config settings for R&G -->
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="CombatExtended.PatchOperationFindMod">
				<modName>RunAndGun</modName>
			</li>
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/ThingDef[defName="AL_Gun_WesleySnipe" or defName="AL_Gun_WesleySnipe2" or defName="AL_Gun_WesleySnipe3" or defName="AL_Gun_WesleySnipe4" or defName="AL_Gun_WesleySnipe5"]</xpath>
				<value>
					<li Class="RunAndGun.DefModExtension_SettingDefaults">
						<weaponForbidden>true</weaponForbidden>
					</li>
				</value>
			</li>
		</operations>
	</Operation>

</Patch>
